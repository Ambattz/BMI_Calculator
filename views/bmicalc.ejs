<%- include('partials/header.ejs'); -%>
  <h3> We got <%= count%> healthy user</h3>
  <div class="inputbox">
    <form class="row gy-2 gx-3 align-items-center d-flex justify-content-center" id="form1" action="/output"
      method="post">

      <div class="col-auto">
        <label class="visually-hidden" for="autoSizingInput">weigth</label>
        <input name="weigth" type="text" class="form-control" id="autoSizingInput" autocomplete="off"
          placeholder="Your weight in kiograms" />
      </div>
      <div class="col-auto">
        <label class="visually-hidden" for="autoSizingInputGroup">heigth</label>
        <input name="heigth" type="text" class="form-control" id="autoSizingInput" autocomplete="off"
          placeholder="Your height in Centimetres" />
      </div>
    </form>
    <form action="/logout" method="get" id="form2">
    </form>
    <div class="col-auto buttons">
      <button type="submit" class="w-100 btn btn-lg btn-primary Calculate" form="form1">BMI</button>
      <button class="w-100 btn btn-lg btn-primary logout" form="form2" type="submit">Logout</button>
    </div>
  </div>

  <div class="outputbox">

    <table class="table table-hover tb" id="dtBasicExample" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th scope="col" style="text-align: center;">#</th>
          <th scope="col" style="padding-left:10px;">Dated</th>
          <th scope="col" style="padding-left:10px;">Weight</th>
          <th scope="col" style="padding-left:10px;">Height</th>
          <th scope="col" style="text-align: center;">BMI</th>
          <th scope="col" style="text-align: center;">Status</th>
        </tr>
      </thead>
      <% var index=Object.keys(userdata).length;%>

        <% userdata.slice().reverse().forEach((udata)=>{ %>

          <tr class="bg-primary ">
            <tbody>
              <tr class=<%=udata.cvalue%>>
                <th scope="row" style="text-align: center;">
                  <%=index%>
                </th>
                <td style="padding-left:10px;">
                  <%=udata.date%>
                </td>
                <td style="padding-left:10px;">
                  <%=udata.weigth%>
                </td>
                <td style="padding-left:10px;">
                  <%=udata.heigth%>
                </td>
                <td style="text-align: center;">
                  <%=udata.bmi%>
                </td>
                <td style="text-align: center;">
                  <img src="images\<%=udata.ivalue%>.png" width="30" height="30" alt="Responsive image">
                </td>
              </tr>
              <% index=index-1;%>
                <% }); %>
            </tbody>
    </table>

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
  <script>

  </script>